tags: TDM
stages:
  Get Inputs:
    actors:
      Get Source Environment:
        parent: FabricSetRead
        in:
          key:
            const: TDM_SOURCE_ENVIRONMENT_NAME
            default: false
      get TDM Separators:
        parent: getTDMSeparators
  Check Version Indicator:
    actors:
      Get Version Indicator:
        parent: FabricSetRead
        in:
          key:
            const: TDM_DATAFLUX_TASK
            default: false
  Check if Data Flux:
    dependsOn: Check Version Indicator
    actors:
      Indicator is True:
        parent: EqualsIgnoreCase
        condition: result
        in:
          b:
            const: true
            schema: boolean
          a:
            link: Get Version Indicator/result
      TDM_VERSION_TASK_EXECUTION_ID:
        parent: FabricSetRead
        in:
          key:
            const: TDM_VERSION_TASK_EXECUTION_ID
    split: '--------------------'
  Build Simple TDM_EID:
    else: true
    transactional: false
    dependsOn: Check Version Indicator
    actors:
      Format Simple EID:
        parent: StringFormat
        in:
          format:
            const: ${sourceEnv}${iidSeparator}${iidOpenSeparator}${sourceIID}${iidCloseSeparator}
          sourceEnv:
            link: Get Source Environment/result
            schema: string
          iidSeparator:
            link: get TDM Separators/IID_SEPARATOR
            schema: string
          iidOpenSeparator:
            link: get TDM Separators/IID_OPEN_SEPARATOR
            schema: string
          sourceIID:
            external: SOURCE_IID
            schema: string
          iidCloseSeparator:
            link: get TDM Separators/IID_CLOSE_SEPARATOR
            schema: string
        out:
          string:
            external: TDM_EID
  Build DataFlux IID:
    dependsOn: Check if Data Flux
    actors:
      Format DataFlux EID:
        parent: StringFormat
        in:
          format:
            const: ${sourceEnv}${iidSeparator}${iidOpenSeparator}${sourceIID}${iidCloseSeparator}${iidSeparator}${taskExeID}
          sourceEnv:
            link: Get Source Environment/result
            schema: string
          iidSeparator:
            link: get TDM Separators/IID_SEPARATOR
            schema: string
          iidOpenSeparator:
            link: get TDM Separators/IID_OPEN_SEPARATOR
            schema: string
          sourceIID:
            external: SOURCE_IID
            schema: string
          iidCloseSeparator:
            link: get TDM Separators/IID_CLOSE_SEPARATOR
            schema: string
          taskExeID:
            link: TDM_VERSION_TASK_EXECUTION_ID/result
            schema: any
            mandatory: false
        out:
          string:
            external: TDM_EID
    split: '--------------------'
  Do Nothing:
    transactional: false
    dependsOn: Build Simple TDM_EID
