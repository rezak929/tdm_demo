tags: TDM
stages:
  Get Project Directory and Create Template Inputs:
    actors:
      Create Template Inputs:
        parent: InnerFlow
        in:
          flowName:
            const: createGenerateDataTablePopulation
          table:
            external: table
            schema: string
            mandatory: false
          luType:
            external: luType
            schema: string
            editor:
              id: com.k2view.logicalUnit
            mandatory: false
          sourceInterface:
            external: sourceInterface
            schema: string
            editor:
              id: com.k2view.mTableKey
            mandatory: false
          sourceSchema:
            external: sourceSchema
            schema: string
            editor:
              id: com.k2view.mTableKey
            mandatory: false
          sourceTable:
            external: sourceTable
            schema: string
            editor:
              id: com.k2view.mTableKey
            mandatory: false
          DOCUMENT_IND:
            external: DOCUMENT_IND
            schema: boolean
            mandatory: false
          mainTableName:
            external: mainTableName
            schema: string
            editor:
              id: com.k2view.mTableKey
            mandatory: false
          schema:
            external: sourceSchema
            schema: string
            editor:
              id: com.k2view.mTableKey
            mandatory: false
        out:
          tableDefaultMapping:
            schema: '#ref'
      Get Project Directory:
        parent: InnerFlow
        in:
          flowName:
            const: GetProjectFolder
        out:
          PROJECT_FOLDER:
            schema: string
      Get Template For Main table Population:
        parent: InnerFlow
        in:
          flowName:
            const: getTemplate
          TEMPLATE_TYPE:
            const: role_base_template
            schema: string
            editor:
              id: com.k2view.mTableKey
            mandatory: false
          INTERFACE_TYPE:
            external: INTERFACE_TYPE
            schema: string
            mandatory: false
        out:
          result:
            schema: string
  Get Template for Generators:
    actors:
      Tempate Found?:
        parent: NotEquals
        condition: result
        in:
          a:
            link: Get Template For Main table Population/result
            schema: string
          b:
            const: ''
            schema: string
      Set Indicator For Generate Flow:
        parent: FabricSet
        in:
          key:
            const: GENERATE_FLOW
            default: false
          value:
            const: 'true'
            default: false
      Read Template of Generators:
        parent: FileRead
        in:
          interface:
            const: null
            link: Get Project Directory/PROJECT_FOLDER
          path:
            link: Get Template For Main table Population/result
      Read Template of Default Generators:
        parent: FileRead
        height: 189
        in:
          interface:
            const: null
            link: Get Project Directory/PROJECT_FOLDER
          path:
            const: SharedObjects/Templates/TDM/tdmTypeDefaultsGenerator.flow.template
  Create Flow:
    actors:
      flow folder:
        parent: StringFormat
        in:
          format:
            const: ${PROJECT_DIRECTORY}/LogicalUnits/${LU_NAME}/Broadway/GeneratorFlows
          PROJECT_DIRECTORY:
            link: Get Project Directory/PROJECT_FOLDER
            schema: string
            mandatory: false
          LU_NAME:
            external: luType
            schema: string
            mandatory: false
      Apply Template:
        parent: LuFunction
        in:
          functionName:
            const: transform
          templateContent:
            link: Read Template of Generators/stream
            schema: string
          data:
            link: Create Template Inputs/tableDefaultMapping
            schema: string
        out:
          result:
            schema: string
      Format Default Generatror Name:
        parent: StringFormat
        in:
          format:
            const: ${sourceTable}.typeDefaultsGenerator.flow
          sourceTable:
            external: sourceTable
            schema: string
            mandatory: false
          params:
            external: params
      Apply Template For Default Generators:
        parent: LuFunction
        in:
          functionName:
            const: transform
          templateContent:
            link: Read Template of Default Generators/stream
            schema: string
          data:
            link: Create Template Inputs/tableDefaultMapping
            schema: string
        out:
          result:
            schema: string
  Write Flow:
    remark: Only Populations based on Broadway Flows will have equivalent Generator
      flow
    actors:
      Check if Table has BF Population:
        parent: NotNull
        condition: result
        in:
          value:
            external: generatorFlowName
            schema: string
      Write Flow to Folder:
        parent: FileWrite
        in:
          interface:
            const: null
            link: flow folder/string
          stream:
            link: Apply Template/result
          path:
            external: generatorFlowName
      Write Default Genertor Flow to Folder:
        parent: FileWrite
        in:
          interface:
            const: null
            link: flow folder/string
          path:
            link: Format Default Generatror Name/string
          stream:
            link: Apply Template For Default Generators/result
schemas:
  Create Template Inputs.out.tableDefaultMapping:
    type: object
    properties:
      NAME:
        type: string
      TABLE_FIELDS:
        type: array
        items:
          type: object
          properties:
            TYPE:
              type: string
            ACTOR:
              type: string
            PARAMETERS:
              type: string
            TABLE:
              type: string
      TABLE_SEQ_DATA:
        type: array
        items:
          type: object
          properties:
            LU_NAME:
              type: string
            TARGET_TABLE_NAME:
              type: string
            TARGET_FIELD_NAME:
              type: string
            FABRIC_TABLE_NAME:
              type: string
            FABRIC_FIELD_NAME:
              type: string
            SEQUENCE_NAME:
              type: string
