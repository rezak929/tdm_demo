tags: TDM
stages:
  Get Project Directory and Create Template Inputs:
    actors:
      Create Template Inputs:
        parent: InnerFlow
        in:
          flowName:
            const: buildDeleteTablesTemplateData
          table:
            external: table
            schema: string
            mandatory: false
          luType:
            external: luType
            schema: string
            editor:
              id: com.k2view.logicalUnit
            mandatory: false
          schemaName:
            external: TARGET_SCHEMA
            schema: string
            mandatory: false
          interfaceName:
            external: TARGET_INTERFACE
            schema: string
            mandatory: false
          useFabric:
            external: useFabric
            schema: boolean
            mandatory: false
        out:
          tableDefaultMapping:
            schema: '#ref'
      Get Project Directory:
        parent: InnerFlow
        in:
          flowName:
            const: GetProjectFolder
        out:
          PROJECT_FOLDER:
            schema: string
      Get Template:
        parent: InnerFlow
        in:
          flowName:
            const: getTemplate
          TEMPLATE_TYPE:
            const: delete_table_population_template
            schema: string
            editor:
              id: com.k2view.mTableKey
            mandatory: false
          INTERFACE_TYPE:
            external: INTERFACE_TYPE
            schema: string
            mandatory: false
        out:
          result:
            schema: string
  Get Template for Generators:
    actors:
      Read Template of Table XML:
        parent: FileRead
        in:
          interface:
            const: null
            link: Get Project Directory/PROJECT_FOLDER
          path:
            const: SharedObjects/Templates/TDM/deleteTable.k2table.xml.template
      Read Template of Table Population:
        parent: FileRead
        in:
          interface:
            const: null
            link: Get Project Directory/PROJECT_FOLDER
          path:
            link: Get Template/result
  Create Flow:
    actors:
      flow folder:
        parent: StringFormat
        in:
          format:
            const: ${PROJECT_DIRECTORY}/LogicalUnits/${LU_NAME}/Tables
          PROJECT_DIRECTORY:
            link: Get Project Directory/PROJECT_FOLDER
            schema: string
            mandatory: false
          LU_NAME:
            external: luType
            schema: string
            mandatory: false
      Format Table XML Name:
        parent: StringFormat
        in:
          format:
            const: ${tableName}.k2table.xml
          tableName:
            link: Create Template Inputs/tableDefaultMapping/TableName
            schema: string
            mandatory: false
      Apply Template For Table XML:
        parent: LuFunction
        in:
          functionName:
            const: transform
          templateContent:
            link: Read Template of Table XML/stream
            schema: string
          data:
            link: Create Template Inputs/tableDefaultMapping
            schema: string
        out:
          result:
            schema: string
      Format Table Population Name:
        parent: StringFormat
        in:
          format:
            const: ${tableName}.population.flow
          tableName:
            link: Create Template Inputs/tableDefaultMapping/TableName
            schema: string
            mandatory: false
      Apply Template For Table Population:
        parent: LuFunction
        in:
          functionName:
            const: transform
          templateContent:
            link: Read Template of Table Population/stream
            schema: string
          data:
            link: Create Template Inputs/tableDefaultMapping
            schema: string
        out:
          result:
            schema: string
  Write Flow:
    remark: Only Populations based on Broadway Flows will have equivalent Generator
      flow
    actors:
      Write Table Population to Folder:
        parent: FileWrite
        in:
          interface:
            const: null
            link: flow folder/string
          path:
            link: Format Table Population Name/string
          stream:
            link: Apply Template For Table Population/result
      Write Table XML to Folder:
        parent: FileWrite
        height: 215
        in:
          interface:
            const: null
            link: flow folder/string
          path:
            link: Format Table XML Name/string
          stream:
            link: Apply Template For Table XML/result
schemas:
  Create Template Inputs.out.tableDefaultMapping:
    type: object
    properties:
      LU_NAME:
        type: string
      TableName:
        type: string
      Columns:
        type: array
        items:
          type: object
          properties:
            datatype:
              type: string
            name:
              type: string
            upperName:
              type: string
      PARENT_TABLE_DATA:
        type: array
        items:
          type: object
          properties:
            FIELD_TYPE:
              type: string
            PARENT_TABLE:
              type: string
            PARENT_FIELD_NAME:
              type: string
            FIELD_NAME:
              type: string
      FullTextSearch:
        type: string
      TARGET_INTERFACE:
        type: string
      TARGET_SCHEMA:
        type: string
      OriginalTableName:
        type: string
      MainTableInd:
        type: boolean
